<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/smsb"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="82dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="82dp"
        android:background="#BDBDBD"
        android:drawableTop="@drawable/baseline_textsms_24"
        android:text="SMS"
        android:textSize="17dp" />

    <Button
        android:id="@+id/emb"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_below="@+id/smsb"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="82dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="82dp"
        android:background="#BDBDBD"
        android:drawableTop="@drawable/baseline_email_24"
        android:text="E-Mail"
        android:textSize="17dp" />

    <Button
        android:id="@+id/mapb"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_below="@+id/emb"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="82dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="82dp"
        android:background="#BDBDBD"
        android:drawableTop="@drawable/baseline_satellite_24"
        android:text="Google Maps"
        android:textSize="17dp" />

    <Button
        android:id="@+id/camb"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_below="@+id/mapb"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="82dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="82dp"
        android:background="#BDBDBD"
        android:drawableTop="@drawable/baseline_camera_alt_24"
        android:text="Camera"
        android:textSize="17dp" />

</RelativeLayout>