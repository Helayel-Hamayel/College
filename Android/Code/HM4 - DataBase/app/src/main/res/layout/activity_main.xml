<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/insbutt"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:drawableBottom="@drawable/ic_insert"
        android:text="Insert" />

    <Button
        android:id="@+id/deletbutt"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/insbutt"
        android:drawableBottom="@drawable/ic_delete"
        android:text="Delete" />

    <Button
        android:id="@+id/srchbutt"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:layout_toEndOf="@+id/deletbutt"
        android:drawableBottom="@drawable/ic_search"
        android:text="Search" />

    <Button
        android:id="@+id/modbutt"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/srchbutt"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="42dp"
        android:drawableBottom="@drawable/ic_modifiy"
        android:text="Modifiy" />

    <Button
        android:id="@+id/dabutt"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/insbutt"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="22dp"
        android:layout_toStartOf="@+id/modbutt"
        android:drawableBottom="@drawable/ic_display"
        android:text="Display All" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="368dp"
        android:layout_below="@+id/divider"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"

        >

        <TextView
            android:id="@+id/odb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  ID  ||  TITLE  ||  COST  ||  LENGTH  ||  LANGUAGE" />
    </ScrollView>



    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="10dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="183dp"
        android:layout_marginEnd="0dp"
        android:background="@color/colorPrimary" />


</RelativeLayout>