<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.channel.example.databasehm">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Database"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.channel.example.databasehm.Modify"
            android:label="Modify a record"
            android:screenOrientation="portrait"
            ></activity>
        <activity android:name="com.channel.example.databasehm.Delete"
            android:label="Delete a record"
            android:screenOrientation="portrait"
            />
        <activity android:name="com.channel.example.databasehm.Insert"
            android:label="Insert a new record"
            android:screenOrientation="portrait"
            />
        <activity android:name="com.channel.example.databasehm.Search"
            android:label="Search a record"
            android:screenOrientation="portrait"
            />
        <activity android:name="com.channel.example.databasehm.MainActivity"
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>